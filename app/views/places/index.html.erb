<h2>Listing places</h2>

<table class="records">
  <tr>
    <th>City</th>
    <th>Name</th>
    <th>Description</th>
    <th>Responsable</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.city %></td>
    <td><%= place.name %></td>
    <td><%= place.description %></td>
    <td><%= place.responsable %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
  <tfooter>
    <%= will_paginate @places if @places.respond_to?(:total_pages) %>
  </tfooter>
</table>
<br />
<%= link_to 'New Place', new_place_path %>

