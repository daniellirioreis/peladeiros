<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>RedPlace</title>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<%= stylesheet_link_tag 'style', 'table' %>

</head>
<body>
<div class="main">
  <div class="header">
    <div class="header_resize">
      <div class="logo">
        <h1><a href="dashboard"><span>Red</span>Place <small>Put your best slogan here</small></a></h1>
      </div>
      <div class="clr">
      </div>
    </div>
  </div>
  <div class="content">
    <div class="content_resize">
      <div class="mainbar">
        <div class="article">
          <div id="flash">
            <% if flash[:notice] %>
              <%= render 'layouts/flash_message', :type => :notice %>
            <% end %>

            <% if flash[:alert] %>
              <%= render 'layouts/flash_message', :type => :alert %>
            <% end %>

            <% if flash[:error] %>
              <%= render 'layouts/flash_message', :type => :error %>
            <% end %>
          </div>
          <%= yield %>              
        </div>
      </div>
      <% if current_user.present? %>
        <div class="sidebar">
          <div class="gadget">
            <h2 class="star"><span>Sidebar</span> Menu</h2>
            <div class="clr"></div>
            <ul class="sb_menu">
              <li><%= link_to 'logout', destroy_user_session_path, :confirm => 'logout confirm' %>     </li>
              <li><%= link_to 'Places', places_path %></li>
              <li><%= link_to 'Companies', companies_path %></li>
            </ul>
          </div>
        </div>
      <% end %>
      <div class="clr"></div>
    </div>
  </div>
  <div class="footer">
    <div class="footer_resize">
      <p class="lf">&copy; Copyright <a href="#">MyWebSite</a>.</p>
      <p class="rf">Layout by Atomic <a href="http://www.atomicwebsitetemplates.com/">Website Templates</a></p>
      <div class="clr"></div>
    </div>
  </div>
</div>
</body>
</html>
