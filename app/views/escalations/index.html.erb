<h2>Convocações</h2>

<% @games.each do  |game| %>
  <fieldset>
    <h2><%= game %></h2>
    <p>
      <b>Data:</b> <%= l game.day.date%>
      | <b>Hora:</b> <%= l game.hour_start , :format => :time%> à
      <%= l game.hour_end  , :format => :time%>    
      | <b> Lugar:</b> <%= game.place_now.name%>
    
    </p>
    <table class='records'>
      <tr>
        <th>Membro</th>
        <th COLSPAN="3" align='left'>Ação</th>
      </tr>

    <% game.escalations.each do |e| %>
      <tr>
        <td><%= e.user %></td>
        <td align='center'>
        <%= link_to 'Desmarcar Presença', e, :confirm => 'Confirma exclusão?', :method => :delete  if e.user.id == current_user.id%></td>
      </tr>
    <% end %>
    <tr>
      <td align="center"><%= link_to 'Clique aqui para confirmar presença', new_escalation_path(:game_id => game.id) %></td>
      <td></td>    
    </tr>  
    </table>      
  </fieldset>
<% end %>
<%= will_paginate @games %>
